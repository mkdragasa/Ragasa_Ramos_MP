<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_EachContact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#FAF6F6"
    android:padding="10dp">

    <Button
        android:id="@+id/btn_CallContact"
        android:layout_width="74dp"
        android:layout_height="37dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="Call"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_TextContact"
        app:layout_constraintStart_toEndOf="@+id/tv_ContactName"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_TextContact"
        android:layout_width="71dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:text="Text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_EditContact"
        android:layout_width="88dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:text="Edit"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ContactMessage" />

    <TextView
        android:id="@+id/tv_ContactName"
        android:layout_width="205dp"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ContactNumber"
        android:layout_width="205dp"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ContactName" />

    <TextView
        android:id="@+id/tv_ContactMessage"
        android:layout_width="369dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ContactNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>